@using DT.Models
<div class="banner">
    <div class="wrap">
        <div class="swiper-container position-relative mySwiper overflow-hidden">
            <div class="swiper-wrapper">
                <div class="swiper-slide bg-image" style="background-image: url(./assets/img/bannar_001.jpg)"></div>
                <div class="swiper-slide bg-image" style="background-image: url(./assets/img/bannar_002.jpg)"></div>
                <div class="swiper-slide bg-image" style="background-image: url(./assets/img/banner-2.jpg)"></div>

            </div>
            <div class="swiper-button swiper-button-next">
                <i class="bi bi-chevron-compact-right chevron-compact"></i>
            </div>
            <div class="swiper-button swiper-button-prev">
                <i class="bi bi-chevron-compact-left chevron-compact"></i>
            </div>
        </div>
    </div>
</div>
<div class="section pt-5">
    <div class="title text-center">
        <h3>Sản phẩm thịnh hành</h3>
    </div>
    <div class="content my-5">
        <div class="container">
            <div class="row">
                @foreach (var item in ViewBag.listPhone)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="item-product">
                            <div class="item-top">
                                <div class="single-image">
                                    <img src="~/assets/img/img_downloaded/@item.UrlHinh" alt="">
                                </div>
                                <a href="/san-pham/@XuLy.Instance.convertToUnSign3(item.TenSP)/@item.ID" class="see-detail nav-link btn rounded-0">Xem chi tiết</a>
                            </div>

                            <div class="text">
                                <span>Smartphone</span>
                                <h6>@item.TenSP</h6>
                                <div class="site-price">
                                    @if (item.Sale > 0)
                                    {
                                        <span class="sale">@((string.Format("{0:C}", item.GiaBan - (item.GiaBan * item.Sale)/100).Replace("$","").Replace(".00", ""))) VNĐ</span>
                                    }
                                    <span class="price">@((string.Format("{0:C}", item.GiaBan).Replace("$","").Replace(".00", ""))) VNĐ</span>
                                </div>
                            </div>
                            @if (item.Sale > 0)
                            {
                                <div class="box-zindex box-sale">
                                    <span>- @item.Sale %</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
