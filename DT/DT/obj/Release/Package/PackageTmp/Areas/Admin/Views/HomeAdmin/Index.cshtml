
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div class="main mt-0 p-3">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="box-item">
                <div class="d-flex HUAOASAY">
                    <div class="text">
                        <h2>@ViewBag.countDonHang</h2>
                        <span>Số đơn hàng</span>
                    </div>
                    <div class="icon-view">
                        <i class="bi bi-eye"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 mb-4">
            <div class="box-item">
                <div class="d-flex HUAOASAY">
                    <div class="text">
                        <h2>@ViewBag.countSanPham</h2>
                        <span>Số sản phẩm</span>
                    </div>
                    <div class="icon-view">
                        <i class="bi bi-eye"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 mb-4">
            <div class="box-item">
                <div class="d-flex HUAOASAY">
                    <div class="text">
                        <h2>@ViewBag.countNhanVien</h2>
                        <span>Số nhân viên</span>
                    </div>
                    <div class="icon-view">
                        <i class="bi bi-eye"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 mb-4">
            <div class="box-item">
                <div class="d-flex HUAOASAY">
                    <div class="text">
                        <h2>1,500</h2>
                        <span>Daily Views</span>
                    </div>
                    <div class="icon-view">
                        <i class="bi bi-eye"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 mb-4">
            <div class="box-item">
                <canvas id="myChart"></canvas>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="box-item">
                <canvas id="myChart2"></canvas>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('myChart').getContext('2d');
    const ctx2 = document.getElementById('myChart2').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [@Html.Raw(ViewBag.TenSP)],
            datasets: [{
                label: '# Số lượng',
                data: [@ViewBag.SoLuongSP],
                backgroundColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
            }]
        },
        options: {
            indexAxis: 'y',
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Sản phẩm bán chạy nhất'
                },
            }
        }
    });
    const myChart2 = new Chart(ctx2, {
        type: 'doughnut',
        data: {
            labels: [@Html.Raw(ViewBag.TenChucVu)],
            datasets: [
                {
                    label: 'Dataset 1',
                    data: [@ViewBag.SoLuong],
                    backgroundColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                }
            ]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Thống kê nhân viên'
                }
            }
        },
    });
</script>
