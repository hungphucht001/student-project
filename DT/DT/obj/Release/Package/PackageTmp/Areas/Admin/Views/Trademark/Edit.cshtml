@model DT.Entity.tb_NCC_ThgHieu

@{
    ViewBag.Title = "Chỉnh sửa thương hiệu";
    Layout = "~/Areas/Admin/Views/Trademark/TrademarkLayout.cshtml";
}

<div class="col-lg-12 mb-4">
    <div class="box-item">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h6>@ViewBag.Title</h6>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.MaThgHieu)
            @Html.HiddenFor(model => model.ID)
        
            <div class="row">
                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Tên nhà cung cấp</label>
                    @Html.DropDownListFor(model => model.MaNCC, null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Tên thương hiệu</label>
                    @Html.TextBoxFor(model => model.tb_ThuongHieu.TenThgHieu, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.tb_ThuongHieu.TenThgHieu, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Trạng thái</label>
                    @Html.DropDownListFor(model => model.tb_ThuongHieu.DaXoa, new List<SelectListItem> {
                        new SelectListItem(){Text="Đã xóa" , Value="true"},
                        new SelectListItem(){Text="Sử dụng" , Value="false"}

                        }, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.tb_ThuongHieu.TenThgHieu, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mt-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
        }
        <div class="mt-3">
            @Html.ActionLink("Quay lại", "Index")
        </div>
    </div>
</div>