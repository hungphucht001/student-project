@using DT.Entity
@{
    var user = Session["user"] as tb_NhanVien;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/bootstrap-icons.css">

    <link rel="stylesheet" href="~/assets/css/normalize.css">
    <link rel="stylesheet" href="~/assets/css/main.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
</head>
<body id="admin">
    <div class="wrapper">
        <div class="d-flex flex-nowrap">
            <div class="sidebar">
                <div class="account">
                    <div class="avatar">
                        <img src="https://pdp.edu.vn/wp-content/uploads/2021/05/hinh-anh-avatar-nam-1.jpg" alt="">
                    </div>
                    @if (user != null)
                    {
                        <div class="name">
                            <h6 class="mb-0 ms-2">@user.HoTen</h6>
                        </div>
                    }
                </div>
                <div class="menu">
                    <ul class="sidebar-menu">
                        <li class="sidebar-item">
                            <a href="/admin">
                                <div class="dad">
                                    <div class="icon">
                                        <i class="bi bi-house"></i>
                                    </div>
                                    <span>
                                        Dashboard
                                    </span>
                                </div>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/admin/quan-ly-don-hang">
                                <div class="dad">
                                    <div class="icon">
                                        <i class="bi bi-list-check"></i>
                                    </div>
                                    <span>
                                        Quản lý đơn hàng
                                    </span>
                                </div>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/admin/quan-ly-san-pham">
                                <div class="dad">
                                    <div class="icon">
                                        <i class="bi bi-phone-fill"></i>
                                    </div>
                                    <span>
                                        Quản lý sản phẩm
                                    </span>
                                </div>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/admin/thanh-vien">
                                <div class="dad">
                                    <div class="icon">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <span>
                                        Quản lý nhân viên
                                    </span>
                                </div>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/admin/nha-cung-cap">
                                <div class="dad">
                                    <div class="icon">
                                        <i class="bi bi-box-seam"></i>
                                    </div>
                                    <span>
                                        Quản lý nhà cung cấp
                                    </span>
                                </div>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/admin/thuong-hieu">
                                <div class="dad">
                                    <div class="icon">
                                        <i class="bi bi-exclude"></i>
                                    </div>
                                    <span>
                                        Quản lý thương hiệu
                                    </span>
                                </div>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/admin/thong-ke">
                                <div class="dad">
                                    <div class="icon">
                                        <i class="bi bi-collection"></i>
                                    </div>
                                    <span>
                                        Thống kê
                                    </span>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="chen-sidebar"></div>
            <div class="content">
                <div class="header">
                    <div class="toggle-menu" id="toggle-menu">
                        <i class="bi bi-list"></i>
                    </div>

                    <div class="user">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                <li><a class="dropdown-item" href="/admin/tai-khoan">Tài khoản</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="/admin/dang-xuat">Đăng xuất</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                @if (TempData["AlertMessage"] != null)
                {
                    <div id="alert" class="alert hide @TempData["AlertType"]" style="position:fixed; right: 30px" role="alert">
                        @TempData["AlertMessage"]
                    </div>
                }

                @RenderBody()
            </div>
        </div>
    </div>
    <div class="modal" id="modal" tabindex="-1" style="display:@(ViewBag.showModal == true ? "block": "none")">
        <div class="modal-dialog">
            <div class="modal-content border-0 box-side">
                <div class="modal-header py-0 border-0">
                    <h6 class="modal-title ">Thông báo</h6>
                </div>
                <div class="modal-body">
                    <p class="mb-0">@ViewBag.ModalContent</p>
                </div>
                <div class="modal-footer border-0 py-0">
                    <button type="button" onclick="$('#modal').css('display','none')" class="my-btn py-1">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/assets/js/main.js"></script>
    @*<script src="~/Areas/Admin/Scripts/ckeditor/ckeditor.js"></script>*@
    <script src="//cdn.ckeditor.com/4.17.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor1', {
            htmlEncodeOutput: false,
        });
        CKEDITOR.replace('editor2', {
            htmlEncodeOutput: false,
        });


        $("#alert").removeClass('hide');
        $("#alert").delay(1000).slideUp(500);

    </script>
</body>
</html>

