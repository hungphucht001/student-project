@model DT.Entity.tb_NhaCungCap

@{
    ViewBag.Title = "Thêm nhà cung cấp mới";
    Layout = "~/Areas/Admin/Views/Supplier/SupplierLayout.cshtml";
}

<div class="col-lg-12 mb-4">
    <div class="box-item">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h6>@ViewBag.Title</h6>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Tên nhà cung cấp</label>
                    @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
                </div>


                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Địa chỉ</label>
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>


                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Email</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>


                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Số điện thoại</label>
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3 col-md-6 col-sm-12">
                    <label class="form-label">Trạng thái</label>
                        @Html.DropDownListFor(model => model.DaXoa, new List<SelectListItem> {
                            new SelectListItem(){Value = "false", Text = "Hợp tác"},
                            new SelectListItem(){Value = "true", Text = "Không hợp tác"}
                        }, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DaXoa, "", new { @class = "text-danger" })
                </div>  
            </div>
                <div class="form-group mt-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thêm mới" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
        <div class="mt-3">
            @Html.ActionLink("Quay lại", "Index")
        </div>
    </div>
</div>